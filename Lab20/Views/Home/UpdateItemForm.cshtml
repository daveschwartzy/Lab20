
@{
    ViewBag.Title = "UpdateItemForm";
}

<h2>UpdateItemForm</h2>

@model Lab20.Models.Item

<form action="/Home/SaveUpdatedItem" method="post">
    <label>Name</label><input type="text" name="Item_Name" readonly value="@ViewBag.RecordToBeUpdated.Item_Name" /><br />
    <label>Description</label><input type="text" name="Item_Description" value="@ViewBag.RecordToBeUpdated.Item_Description" /><br />
    <label>Quantity</label><input type="text" name="Item_Quantity" value="@ViewBag.RecordToBeUpdated.Item_Quantity" /><br />
    <label>Price</label><input type="text" name="Item_Price" value="@ViewBag.RecordToBeUpdated.Item_Price" /><br />
    <input type="submit" value="Save" />
</form>