
@{
    ViewBag.Title = "Signup";
}

<h2>Signup</h2>


@model Lab20.Models.Register


<form name="signup" id="signup" action="/Home/ProcessSignup"  method="post">
    <div class="form-group">
    First Name: <input type="text" name="FirstName" class="form-control" pattern="^[a-zA-Z]+$" title="Name can only contain characters." required/><br />
    Last Name: <input type="text" name="LastName" class="form-control" pattern="^[a-zA-Z].{10}+$" title="Name can only contain characters." required/><br />
    Email Address: <input type="email" name="EmailAddress" class="form-control" /><br />
    Phone Number: <input type="text" name="PhoneNumber" class="form-control" pattern="^[0-9]{10}$" title="Can only contain numbers." size="10" maxlength="10" required /><br />
    Password: <input type="password" name="Password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/><br />
    <input type="submit" value="Signup" />
    </div>

</form>